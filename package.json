{
  "name": "ra-cognito",
  "version": "1.0.3",
  "description": "Authenticate a react admin CMS with cognito user pools.",
  "main": "dist/index.js",
  "scripts": {
    "lint": "xo",
    "precommit": "lint-staged",
    "prepare": "npm run lint && npm run transpile",
    "release": "standard-version",
    "transpile": "babel src --out-dir dist --ignore **/*.test.js",
    "test": "jest"
  },
  "keywords": [
    "reactjs",
    "react",
    "react-admin",
    "aws",
    "authentication",
    "cognito"
  ],
  "files": [
    "dist"
  ],
  "author": "Ben Briggs <ben.briggs@thedistance.co.uk>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-react-jsx": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.3.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "ramda": "^0.25.0",
    "standard-version": "^4.4.0",
    "xo": "^0.23.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "xo": {
    "extends": [
      "prettier",
      "plugin:react/recommended"
    ],
    "rules": {
      "capitalized-comments": "off",
      "import/no-unassigned-import": [
        "error",
        {
          "allow": [
            "**/*.css"
          ]
        }
      ],
      "import/no-named-as-default": "off",
      "unicorn/catch-error-name": "off",
      "unicorn/explicit-length-check": "off",
      "unicorn/filename-case": "off"
    },
    "overrides": [
      {
        "files": [
          "src/**/*.js"
        ],
        "env": "browser"
      },
      {
        "files": [
          "**/*.test.js",
          "**/__mocks__/*.js"
        ],
        "env": "jest"
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "peerDependencies": {
    "@material-ui/core": "^1.4.0",
    "@material-ui/icons": "^3.0.1",
    "amazon-cognito-identity-js": "^3.0.3",
    "aws-amplify": "^1.1.10",
    "classnames": "2.2.6",
    "prop-types": "^15.6.2",
    "ra-core": "^2.5.1",
    "ra-ui-materialui": "^2.5.1",
    "ramda": "^0.25.0",
    "react": "^16.5.0",
    "react-admin": "^2.5.1",
    "react-dom": "^16.5.0",
    "react-redux": "5.0.7",
    "recompose": "0.26.0",
    "redux-form": "7.4.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "0.12"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-react-jsx"
    ]
  }
}
